{
    "compilerOptions": {
        "module": "CommonJS",
        "baseUrl": "./",
        "outDir": "build",
        "target": "ES2017",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "lib": ["es6"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true
    },
    // "include": ["**.ts", "src/**.ts",],
}
